<div class="pf2e chat-card item-card pf2e-toolbelt-service" data-actor-id="{{actor.id}}"
    data-service-id="{{service.id}}" {{#if tokenId}}data-token-id="{{tokenId}}" {{/if}}>
    {{#if tradeMsg}}
    <i>{{{tradeMsg}}}</i>
    {{/if}}
    <header class="card-header flexrow">
        <img src="{{service.img}}" />
        <h3>{{service.name}}</h3>
    </header>
    <div class="card-content">
        {{{service.enrichedDescription}}}
    </div>
    <footer>
        <span>{{localize "PF2E.LevelLabel"}} {{service.level}}</span>
        <span>{{localize "PF2E.PriceLabel"}} {{service.enrichedPrice}}</span>
    </footer>
</div>