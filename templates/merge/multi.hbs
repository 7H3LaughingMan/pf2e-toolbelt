<form class="multi-cast-dialog">
    <div class="hint">
        <input type="number" name="multi" min="1" max="50" value="2">
        <label>{{i18n 'hint'}}</label>
    </div>

    <div class="buttons">
        <button data-action="cast"><i class="fa-solid fa-wand-magic-sparkles"></i> {{i18n 'cast'}}</button>
        <button data-action="cancel"><i class="fa-solid fa-xmark"></i> {{i18n 'cancel'}}</button>
    </div>
</form>